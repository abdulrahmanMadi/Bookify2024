@model BookViewModel
@{
    ViewData["Title"] = Model?.Title;
}

<div class="d-flex flex-column flex-column-fluid container-fluid">
    <div class="toolbar mb-5 mb-lg-7" id="kt_toolbar">
        <div class="page-title d-flex flex-column me-3">
            <ul class="breadcrumb breadcrumb-dot fw-semibold text-gray-600 fs-7 my-1">
                <li class="breadcrumb-item text-gray-600">
                    <a href="index.html" class="text-gray-600 text-hover-primary">Home</a>
                </li>

                <li class="breadcrumb-item text-gray-600">Books</li>

                <li class="breadcrumb-item text-gray-500">Details</li>
            </ul>
        </div>
    </div>
    <div class="content flex-column-fluid" id="kt_content">
        <div class="card mb-9">
            <div class="card-body pt-9 pb-0">
                <div class="d-flex flex-wrap flex-sm-nowrap mb-6">
                    <div class="d-flex flex-center flex-shrink-0 bg-light rounded w-100px h-100px w-lg-150px h-lg-150px me-7 mb-4">
                        <a data-fslightbox href="@Model?.ImageUrl">
                            <img class="mw-100px mw-lg-100px" src="@Model?.ImageThumbUrl" alt="@Model?.ImageThumbUrl" />
                        </a>
                    </div>
                    <div class="flex-grow-1">
                        <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                            <div class="d-flex flex-column">
                                <div class="d-flex align-items-center mb-1">
                                    <a href="#" class="text-gray-800 text-hover-primary fs-2 fw-bold me-3">@Model!.Title</a>
                                    <span class="badge badge-light-@(Model.IsDeleted? "danger": Model.IsAvailableForRental?"success":"warning") me-auto">@(Model.IsDeleted ? "Deleted" : Model.IsAvailableForRental ? "Available For Rental" : "Not Available For Rental")</span>
                                </div>
                               
                                <div class="d-flex flex-wrap fw-semibold mb-3 fs-5 text-gray-400 ">
                                    <i class="ki-duotone ki-pencil mt-2 ">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                    <span class="ms-2 text-primary">@Model.Author</span></div>
                                <div class="d-flex flex-wrap  mb-4 fs-7 text-gray-400">@Model.Publisher</div>
                            </div>
                            <div class="d-flex mb-4">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary me-3">Edit</a>
                            </div>
                        </div>
                        <div class="d-flex flex-wrap justify-content-start">
                            <div class="d-flex flex-wrap">
                                <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                    <div class="d-flex align-items-center ">
                                        <i class="ki-outline ki-calendar-add fs-2   text-primary"></i>

                                        <div class="fs-4 fw-bold px-2">@Model.PublishingDate.ToString("dd MMM ,yyyy")</div>
                                    </div>
                                    <div class="fw-semibold fs-6 text-gray-500">Due Date</div>
                                </div>
                                <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="ki-duotone ki-calendar-add fs-2 text-primary">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                            <span class="path4"></span>
                                            <span class="path5"></span>
                                            <span class="path6"></span>
                                        </i>
                                        <div class="fs-4 fw-bold px-2">@Model.CreatedOn.ToString("dd MMM ,yyyy")</div>
                                    </div>
                                    <div class="fw-semibold fs-6 text-gray-500">Added Date</div>
                                </div>
                                <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="ki-duotone ki-copy fs-2 text-primary"></i>
                                        <div class="fs-4 fw-bold counted px-2" data-kt-countup="true" data-kt-countup-value="150">150</div>
                                    </div>

                                    <div class="fw-semibold fs-6 text-gray-500">Copies</div>
                                </div>

                            </div>
                            <div class="align-self-end pb-3">
                                @foreach (var category in Model.Catgegories)
                                {
                                    <span class="badge badge-light-info me-auto">
                                        @category
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="separator"></div>
                <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bold">
                    <li class="nav-item">
                        <a class="nav-link text-active-primary active py-5 me-6" data-bs-toggle="tab" href="#Description">Overview</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-active-primary py-5 me-6" data-bs-toggle="tab" href="#Copies">Targets</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="tab-content">
            <div id="Description" class="card tab-pane fade show active">
                <div class="card-header">
                    <div class="card-title fs-3 fw-bold">Project description</div>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div id="Copies" class="card tab-pane fade  ">
                <div class="card-header">
                    <div class="card-title fs-3 fw-bold">Project Copies</div>
                </div>
                <div class="card-body">
                    <h1> Copies</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="footer py-4 d-flex flex-column flex-md-row flex-stack" id="kt_footer">
        <div class="text-gray-900 order-2 order-md-1">
            <span class="text-muted fw-semibold me-1">2023&copy;</span>
            <a href="https://keenthemes.com" target="_blank" class="text-gray-800 text-hover-primary">Keenthemes</a>
        </div>

        <ul class="menu menu-gray-600 menu-hover-primary fw-semibold order-1">
            <li class="menu-item">
                <a href="https://keenthemes.com" target="_blank" class="menu-link px-2">About</a>
            </li>
            <li class="menu-item">
                <a href="https://devs.keenthemes.com" target="_blank" class="menu-link px-2">Support</a>
            </li>
            <li class="menu-item">
                <a href="https://1.envato.market/EA4JP" target="_blank" class="menu-link px-2">Purchase</a>
            </li>
        </ul>
    </div>
</div>
@section Plugins
{
    <script src="~/assets/js/fslightbox.bundle.js"></script>
}