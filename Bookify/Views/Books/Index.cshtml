

@model IEnumerable<BookViewModel>
@{
    ViewData["Title"] = "Books";
}
@section Styles {
    <link href="~/assets/css/datatables.bundle.css" rel="stylesheet" />
}

<div class="alert bg-light-primary border border-primary border-3 border-dashed d-flex justify-content-between w-100 p-5 mb-10">
    <div class="d-flex align-items-center">
        <div class="symbol symbol-40px me-4">
            <div class="symbol-label fs-2 fw-semibold text-success">
                <!--begin::Svg Icon | path: icons/duotune/general/gen002.svg-->
                <span class="svg-icon svg-icon-2 svg-icon-primary">
                    <i class="ki-duotone ki-book-square fs-2 text-primary">
                        <span class="path1"></span>
                        <span class="path2"></span>
                        <span class="path3"></span>
                    </i>
                </span>
                <!--end::Svg Icon-->
            </div>
        </div>
        <!--begin::Content-->
        <div class="d-flex flex-column pe-0 pe-sm-10">
            <h5 class="mb-1">Books</h5>
        </div>
        <!--end::Content-->
    </div>
    <div>
        <a asp-action="Create" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-square-dotted"></i>
            Add
        </a>
    </div>
</div>
<div class="card shadow-sm">
    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
        <div class="card-title">
            <div class="d-flex align-items-center position-relative my-1">
                <span class="svg-icon svg-icon-1 position-absolute ms-4">


                    <i class="ki-duotone ki-book-square fs-2">
                        <span class="path1"></span>
                        <span class="path2"></span>
                        <span class="path3"></span>
                    </i>
                </span>
                <input type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Search by title or author..." />
            </div>
        </div>
    </div>
    <div class="card-body pt-0">
        @if (!Model.Any())
        {
            <div class="alert alert-warning d-flex align-items-center p-5">

                <i class="ki-duotone ki-information-5 fs-2tx text-danger me-6 "><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>          
                <div class="d-flex flex-column">
                    <h4 class="mb-1 text-dark">No Categories Found !</h4>

                    <span> Categories item is not Found !</span>
                </div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped gy-2 align-middle gs-10 js-DataTables" data-document-title="Categories Document">
                    <thead>
                        <tr class="fw-semibold fs-6 text-gray-800 border-bottom border-gray-200">
                            <th>Title</th>
                            <th>Publisher</th>
                            <th>Publising Date</th>
                            <th>Hall</th>
                            <th>Category</th>
                            <th>Rental</th>
                            <th>Status</th>
                            <th class="print-no-columns  text-end">Action</th> 
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <partial name="_BookRow" model="item" />
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>



@Html.AntiForgeryToken()
@section Plugins {
    <script src="~/assets/js/datatables.bundle.js"></script>
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

}