@using Bookify.Core.Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}
<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">
            <div class="symbol symbol-50px me-4 ">
                <div class="symbol-label fs-2 fw-semibold text-success">
                    <i class="ki-duotone ki-category fs-2 text-primary">
                        <span class="path1"></span>
                        <span class="path2"></span>
                        <span class="path3"></span>
                        <span class="path4"></span>
                    </i>
                </div>
            </div>
            Categories
        </h3>
        <div class="card-toolbar">
            <a href="javascript:;" class="btn btn-sm btn-primary js-render-modal" data-title="Add Category" data-url="/Categories/Create">

                <i class="ki-duotone ki-plus-square text-white">
                    <span class="path1"></span>
                    <span class="path2"></span>
                    <span class="path3"></span>
                </i>
                Add
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <!--begin::Alert-->
            <div class="alert alert-warning d-flex align-items-center p-5">
                <!--begin::Icon-->

                <i class="ki-duotone ki-information-5 fs-2tx text-danger me-6 "><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>                <!--end::Icon-->
                <!--begin::Wrapper-->
                <div class="d-flex flex-column">
                    <!--begin::Title-->
                    <h4 class="mb-1 text-dark">No Categories Found !</h4>
                    <!--end::Title-->
                    <!--begin::Content-->
                    <span> Categories item is not Found !</span>
                    <!--end::Content-->
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Alert-->
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped gy-7 gs-7">
                    <thead>
                        <tr class="fw-semibold fs-6 text-gray-800 border-bottom border-gray-200">
                            <th>Name</th>
                            <th>Status</th>
                            <th>Created On</th>
                            <th>Last Updated On</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <span class=" js-status badge badge-light-@(item.IsDeleted? "danger":"success")">@(item.IsDeleted ? "Deleted" : "Available")</span>

                                </td>
                                <td>@item.CreatedOn</td>
                                <td class="js-updated-on">@item.LastUpdatedOn</td>
                                <td>
                                    @*  <a class="btn btn-sm btn-outline btn-outline-dashed btn-outline-primary btn-active-light-primary" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.id">
                            Edit</a> *@
                                    <button type="button" class="btn btn-sm btn-icon btn-color-primary btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                        <!--begin::Svg Icon | path: icons/duotune/general/gen024.svg-->
                                        <i class="ki-duotone ki-dots-square fs-1">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                            <span class="path4"></span>
                                        </i>
                                        <!--end::Svg Icon-->
                                    </button>
                                    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-3" data-kt-menu="true" style="">
                                        <!--begin::Menu item-->
                                        <div class="menu-item px-3">
                                            <a class="menu-link px-3 js-render-modal"
                                               href="javascript:;"
                                               data-title="Edit Category"
                                               data-update="true"
                                               data-url="/Categories/Create/@item.id">
                                                Edit
                                            </a>
                                        </div>
                                        <!--end::Menu item-->
                                        <!--begin::Menu item-->
                                        <div class="menu-item px-3">
                                            <a href="javascript:;" class="menu-link flex-stack px-3 js-toggle-status" data-id="@item.id">
                                                Toggle Status
                                            </a>
                                        </div>
                                        <!--end::Menu item-->
                                    </div>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        }
    </div>

</div>


@Html.AntiForgeryToken()
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('.js-toggle-status').on('click', function () {
                var btn = $(this);
                bootbox.confirm({
                    title: 'Delete item',
                    message: 'Are you sure to delete this item?',
                    buttons: {
                        cancel: {
                            label: '<i class="fa fa-times"></i> Cancel',
                            className: 'btn-success'

                        },
                        confirm: {
                            label: '<i class="fa fa-check"></i> Confirm',
                            className: 'btn-danger'

                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.post({
                                url: '/Categories/ToggleStatus/' + btn.data('id'),
                                data: {
                                    '__RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                                },
                                success: function (lastUpdatedOn) {
                                    var row = btn.parents('tr');
                                    var status = row.find('.js-status');
                                    var newStatus = status.text().trim() === 'Deleted' ? 'Available' : 'Deleted';
                                    status.text(newStatus).toggleClass('badge-light-success badge-light-danger');
                                    row.find('.js-updated-on').html(lastUpdatedOn);
                                    row.addClass('animated flash');

                                    showSuccessMessage();
                                },
                                error: function () {
                                    showErrorMessage();
                                }
                            });
                        }
                    }
                });
               
            });
        });
    </script>
}